{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
    <h1>Liste des tâches à réaliser</h1>

    <div class="row">
        <div class="col-2 mt-5">
            <div class="col-12">
                <span class="badge bg-primary">➕</span>
            </div>
            {% for category in categories %}
                <div class="col-12 mt-5">
                    <span class="badge bg-primary">{{ category.name }}</span>
                </div>
            {% endfor %}
        </div>
        <div class="col-10">
            {% for task in tasks %}
                <div class="card mt-5">
                    <h3 class="card-header text-center">{{ task.title }}</h3>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">URGENT</div>
                            <div class="col-6 ">Fait</div>
                        </div>
                    </div>
                    <hr>
                    <div class="card-body">
                        <div class="row">
                                {% for category in task.categories %}
                                    <div class="col-4 text-center">
                                        <span class="badge bg-primary ">{{ category.name }}</span>
                                    </div>
                                {% endfor %}
                        </div>
                    </div>
                    <hr>
                    <div class="card-body">
                        <p class="card-text">{{ task.description | slice (0, 300)~'...' }}</p>
                    </div>

                    <div class="card-footer text-muted">
                        <div class="row text-center">
                            <div class="col-6">{{ task.user.username }}</div>
                            <div class="col-6">A faire pour le {{ task.expiratedAt | date("d/m/Y")  }}</div>
                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>

    </div>
{% endblock %}
